---
import { Badge } from "@/components/atoms/badge";
import { ProjectCard } from "@/components/molecules/project-card";
import Layout from "@/layout/layout.astro";
import Hero from "@/components/organisms/hero.astro";
import { projects } from "@/lib/lib";
---

<Layout>
  <Hero />

  {/* About Section */}
  <section id="about" class="py-20 px-6 bg-card/30">
    <div class="container mx-auto max-w-4xl">
      <h2 class="text-3xl font-bold mb-8">About Me</h2>
      <div class="space-y-4 text-muted-foreground leading-relaxed">
        <p>
          I'm a passionate full-stack developer with over 5 years of experience
          building web applications that prioritize user experience and
          performance. My journey in tech started with a curiosity about how
          things work, which evolved into a career focused on creating
          meaningful digital experiences.
        </p>
        <p>
          Currently, I work as a Senior Frontend Engineer at TechCorp, where I
          lead the development of accessible UI components and design systems.
          I'm particularly interested in the intersection of design and
          development, always striving to bridge the gap between aesthetics and
          functionality.
        </p>
        <p>
          When I'm not coding, you can find me contributing to open-source
          projects, writing technical articles, or exploring new technologies
          and frameworks.
        </p>
      </div>
    </div>
  </section>

  {/* Tech Stack Section */}
  <section class="py-20 px-6">
    <div class="container mx-auto max-w-4xl">
      <div class="mb-12">
        <h2 class="text-3xl font-bold mb-3">Tech Stack</h2>
        <p class="text-muted-foreground">
          Technologies I work with on a regular basis
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <div class="space-y-4">
          <div class="flex items-center gap-3 mb-4">
            <div
              class="w-10 h-10 rounded-lg bg-accent/10 border border-accent/20 flex items-center justify-center"
            >
              <svg
                class="w-5 h-5 text-accent"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width={2}
                  d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4"></path>
              </svg>
            </div>
            <h3 class="text-lg font-semibold">Frontend</h3>
          </div>
          <div class="flex flex-wrap gap-2">
            <Badge>React</Badge>
            <Badge>Next.js</Badge>
            <Badge>TypeScript</Badge>
            <Badge>Tailwind CSS</Badge>
            <Badge>Framer Motion</Badge>
          </div>
        </div>

        <div class="space-y-4">
          <div class="flex items-center gap-3 mb-4">
            <div
              class="w-10 h-10 rounded-lg bg-accent/10 border border-accent/20 flex items-center justify-center"
            >
              <svg
                class="w-5 h-5 text-accent"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width={2}
                  d="M5 12h14M5 12a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v4a2 2 0 01-2 2M5 12a2 2 0 00-2 2v4a2 2 0 002 2h14a2 2 0 002-2v-4a2 2 0 00-2-2m-2-4h.01M17 16h.01"
                ></path>
              </svg>
            </div>
            <h3 class="text-lg font-semibold">Backend</h3>
          </div>
          <div class="flex flex-wrap gap-2">
            <Badge>Node.js</Badge>
            <Badge>Express</Badge>
            <Badge>PostgreSQL</Badge>
            <Badge>MongoDB</Badge>
            <Badge>Prisma</Badge>
          </div>
        </div>

        <div class="space-y-4">
          <div class="flex items-center gap-3 mb-4">
            <div
              class="w-10 h-10 rounded-lg bg-accent/10 border border-accent/20 flex items-center justify-center"
            >
              <svg
                class="w-5 h-5 text-accent"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width={2}
                  d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31 2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"
                ></path>
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width={2}
                  d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
              </svg>
            </div>
            <h3 class="text-lg font-semibold">Tools & Others</h3>
          </div>
          <div class="flex flex-wrap gap-2">
            <Badge>Git</Badge>
            <Badge>Docker</Badge>
            <Badge>Vercel</Badge>
            <Badge>Figma</Badge>
            <Badge>Jest</Badge>
          </div>
        </div>
      </div>
    </div>
  </section>

  {/* Experience Section */}
  <section id="experience" class="py-20 px-6 bg-card/30">
    <div class="container mx-auto max-w-4xl">
      <h2 class="text-3xl font-bold mb-12">Experience</h2>

      <div class="space-y-12">
        <div class="relative pl-8 border-l-2 border-border">
          <div
            class="absolute -left-[9px] top-0 w-4 h-4 rounded-full bg-accent border-4 border-background"
          >
          </div>
          <div class="space-y-2">
            <div
              class="flex flex-col md:flex-row md:items-center md:justify-between gap-2"
            >
              <h3 class="text-xl font-semibold">Senior Frontend Engineer</h3>
              <span class="text-sm text-muted-foreground">2023 — Present</span>
            </div>
            <p class="text-accent font-medium">TechCorp Inc.</p>
            <p class="text-muted-foreground leading-relaxed">
              Leading the development of accessible UI components and design
              systems. Collaborating with cross-functional teams to implement
              best practices in web accessibility and performance optimization.
            </p>
            <div class="flex flex-wrap gap-2 pt-2">
              <Badge>React</Badge>
              <Badge>TypeScript</Badge>
              <Badge>Next.js</Badge>
              <Badge>Storybook</Badge>
            </div>
          </div>
        </div>

        <div class="relative pl-8 border-l-2 border-border">
          <div
            class="absolute -left-[9px] top-0 w-4 h-4 rounded-full bg-muted border-4 border-background"
          >
          </div>
          <div class="space-y-2">
            <div
              class="flex flex-col md:flex-row md:items-center md:justify-between gap-2"
            >
              <h3 class="text-xl font-semibold">Full-Stack Developer</h3>
              <span class="text-sm text-muted-foreground">2021 — 2023</span>
            </div>
            <p class="text-accent font-medium">StartupXYZ</p>
            <p class="text-muted-foreground leading-relaxed">
              Built and maintained multiple client-facing web applications.
              Implemented RESTful APIs and database architectures. Reduced page
              load times by 40% through optimization techniques.
            </p>
            <div class="flex flex-wrap gap-2 pt-2">
              <Badge>Node.js</Badge>
              <Badge>PostgreSQL</Badge>
              <Badge>React</Badge>
              <Badge>AWS</Badge>
            </div>
          </div>
        </div>

        <div class="relative pl-8 border-l-2 border-border">
          <div
            class="absolute -left-[9px] top-0 w-4 h-4 rounded-full bg-muted border-4 border-background"
          >
          </div>
          <div class="space-y-2">
            <div
              class="flex flex-col md:flex-row md:items-center md:justify-between gap-2"
            >
              <h3 class="text-xl font-semibold">Junior Developer</h3>
              <span class="text-sm text-muted-foreground">2020 — 2021</span>
            </div>
            <p class="text-accent font-medium">Digital Agency Co.</p>
            <p class="text-muted-foreground leading-relaxed">
              Developed responsive websites and web applications for various
              clients. Collaborated with designers to translate mockups into
              functional interfaces.
            </p>
            <div class="flex flex-wrap gap-2 pt-2">
              <Badge>JavaScript</Badge>
              <Badge>HTML/CSS</Badge>
              <Badge>WordPress</Badge>
              <Badge>jQuery</Badge>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  {/* Projects Section */}
  <section id="projects" class="py-20 px-6">
    <div class="container mx-auto max-w-6xl">
      <div class="mb-12">
        <h2 class="text-3xl font-bold mb-4">Featured Projects</h2>
        <p class="text-muted-foreground">
          A selection of my recent work and personal projects
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        {
          projects.map((project) => (
            <ProjectCard
              slug={project.slug}
              title={project.title}
              description={project.description}
              image={project.image}
              techStack={project.techStack}
              status={project.status}
            />
          ))
        }
      </div>
    </div>
  </section>
</Layout>
