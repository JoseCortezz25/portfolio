---
import TechstackItem from "@/components/atoms/techstack-item.astro";

const techStack = [
  "React",
  "Next.js",
  "TypeScript",
  "Tailwind CSS",
  "Shadcn UI",
  "Framer Motion",
  "React Query",
  "React Hook Form",
  "Astro",
];
---

<section class="py-20 px-6">
  <div class="container mx-auto max-w-6xl">
    <div class="relative border border-border/50 rounded-lg">
      <span class="corner-mark-top-right"></span>
      <span class="corner-mark-bottom-left"></span>

      <div class="grid grid-cols-1 lg:grid-cols-2 md:gap-12 gap-8 items-start">
        {/* Left Column - Technologies */}
        <div class="grid grid-cols-3 aspect-square">
          {techStack.map((tech) => <TechstackItem key={tech} tech={tech} />)}
        </div>

        {/* Right Column - Title */}
        <div class="flex flex-col justify-center pb-8 px-6 md:py-9">
          <h2 class="text-4xl md:text-5xl font-bold mb-4">Tech Stack</h2>
          <p class="text-lg text-muted-foreground">
            Technologies I work with on a regular basis
          </p>
        </div>
      </div>
    </div>
  </div>
</section>
