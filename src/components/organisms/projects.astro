---
import { projects } from "@/lib/lib";
import { ProjectCard } from "../molecules/project-card";
import { Button } from "../ui/button";
---

<section id="projects" class="py-20 px-6">
  <div class="container mx-auto max-w-6xl">
    {/* Simple header with corner crosses */}
    <div class="relative mb-16 pb-8 border-b border-border/20">
      <span class="corner-cross-tl"></span>
      <span class="corner-cross-tr"></span>

      <div class="text-center max-w-2xl mx-auto">
        <h2 class="text-3xl md:text-4xl font-bold mb-4">Featured Projects</h2>
        <p class="text-muted-foreground">
          A selection of my recent work and personal projects
        </p>
      </div>

      <span class="corner-cross-bl"></span>
      <span class="corner-cross-br"></span>
    </div>

    {/* Clean grid layout with border dividers */}
    <div class="flex flex-col">
      {
        projects.map((project) => (
          <a
            href={`/projects/${project.slug}`}
            class="group relative bg-background p-8 transition-all duration-300 border border-border/50 hover:bg-gray-100/50"
          >
            {/* Corner crosses */}
            <span class="corner-cross-tl" />
            <span class="corner-cross-tr" />

            <div class="mb-4">
              <div class="flex items-start justify-between gap-4 mb-3">
                <h3 class="text-2xl font-semibold transition-colors" transition:name={`project-title-${project.slug}`}>
                  {project.title}
                </h3>
              </div>
              <p class="text-muted-foreground text-sm leading-relaxed mb-4" transition:name={`project-desc-${project.slug}`}>
                {project.description}
              </p>
            </div>

            <div class="flex flex-wrap gap-2 mb-4">
              {project.techStack.slice(0, 4).map((tech) => (
                <span class="text-xs text-muted-foreground">{tech}</span>
              ))}
            </div>

            <Button variant="outline">
              <span>View project</span>
              <svg
                class="w-4 h-4"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width={2}
                  d="M17 8l4 4m0 0l-4 4m4-4H3"
                />
              </svg>
            </Button>

            <span class="corner-cross-bl" />
            <span class="corner-cross-br" />
          </a>
        ))
      }
    </div>
  </div>
</section>
